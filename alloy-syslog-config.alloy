loki.source.syslog "local" {
  listener {
    address = "0.0.0.0:514"
    protocol = "udp"
    syslog_format = "rfc3164"
    labels = { job = "syslog", component = "loki.source.syslog", protocol = "udp" }
  }

  forward_to = [loki.write.local.receiver]
}

loki.write "local" {
  endpoint {
    url = "http://loki:3100/api/v1/push"
  }
}
